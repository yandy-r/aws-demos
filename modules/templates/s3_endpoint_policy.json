{
  "Version": "2008-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject"
      ],
      "Resource": [
        "${bucket_arn}",
        "${bucket_arn}/*",
        "arn:aws:s3:::packages.${region}.amazonaws.com/*",
        "arn:aws:s3:::repo.${region}.amazonaws.com/*",
        "arn:aws:s3:::amazonlinux.${region}.amazonaws.com/*"
      ],
      "Principal": "*"
    }
  ]
}